<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/diagnosis_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/selection_item_shape"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_symptoms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Symptoms List"
        android:textAlignment="viewStart"
        android:textColor="@color/halfBlack"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/add_attr_location_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_list"
        app:layout_constraintStart_toStartOf="@+id/item_symptoms"
        app:layout_constraintTop_toBottomOf="@+id/item_symptoms" />

    <TextView
        android:id="@+id/item_name"
        android:layout_width="156dp"
        android:layout_height="25dp"
        android:padding="3dp"
        android:text="@string/account_name"
        android:textAlignment="viewStart"
        android:textColor="@color/halfBlack"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/add_attr_location_icon"
        app:layout_constraintStart_toEndOf="@+id/add_attr_location_icon"
        app:layout_constraintTop_toTopOf="@+id/add_attr_location_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>